@model ASK_App.Models.QuestionTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="QuestionTypeViewModel" asp-action="Index" method="get">
    <p>

        <select asp-for="questionType" asp-items="@Model.QuestionTypes"  onchange = "this.form.submit();">
            <option value="">All</option>
        </select>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.question.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.question.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.question.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.question.User)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.question.QuestionType)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Questions)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuestionType.Name)

                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.QuestionId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.QuestionId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.QuestionId">Delete</a> |

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </form>